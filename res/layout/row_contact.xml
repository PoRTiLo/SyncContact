<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  android:layout_width="match_parent"
  android:descendantFocusability="blocksDescendants"
  android:layout_height="match_parent" > 
  <CheckBox android:id="@+id/row_contact_sync"
    android:layout_alignParentLeft="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" /> 
  <TextView android:id="@+id/row_contact_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_toRightOf="@id/row_contact_sync" /> 
  <TextView android:id="@+id/row_conatct_in_group" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:layout_below="@id/row_contact_name" 
    android:layout_toRightOf="@id/row_contact_sync"/>
</RelativeLayout>